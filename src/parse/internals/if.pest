// Main rules
ifStatement = ${
    "if" ~ space+ ~ ifStatementMatch ~ newline+ ~ (space+)? ~ "then"
        ~ (space+ | newline+) ~ (#then_block = statement)+
        ~ (newline+ ~ (space+)? ~ "else" ~ newline+
        ~ (#else_block = statement)+)? ~ newline+ ~ (space+)? ~ "fi" }

ifStatementMatch = ${
    backtickSubstitution
  | builtinWrapper
}
